<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imagen_servicio"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/schedule"></ImageView>

        <TextView
            android:id="@+id/nombre_servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imagen_servicio"
            android:layout_toRightOf="@+id/imagen_servicio"
            android:text="Descripción del servicio"
            android:textSize="12sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/descripcion_servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_servicio"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imagen_servicio"
            android:layout_toRightOf="@+id/imagen_servicio"
            android:text="Importante empresa del sector Industrial, empresa de Maderas, requiere para su equipo de trabajo técnico o tecnólogo para el cargo de Técnico en Mantenimiento con mínimo 1 año de experiencia en el cargo, realizando mantenimiento a maquinaria industrial. Debe tener MOTO y disponibilidad para viajar."
            android:textSize="8sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/descripcion_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descripcion_servicio"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imagen_servicio"
            android:layout_toRightOf="@+id/imagen_servicio"
            android:text="Horario: Lunes a viernes de 8:00 am a 5:30 y sábados de 8:00 am a 1:30"
            android:textSize="8sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/descripcion_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descripcion_horario"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imagen_servicio"
            android:layout_toRightOf="@+id/imagen_servicio"
            android:text="Hace 1 hora"
            android:textSize="8sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_below="@+id/descripcion_hora"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="250dp"
            android:layout_toEndOf="@+id/imagen_servicio"
            android:layout_toRightOf="@+id/imagen_servicio"
            android:backgroundTint="#14DC7B"
            android:text="Contactar"
            android:textSize="8sp"
            android:textStyle="normal" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>