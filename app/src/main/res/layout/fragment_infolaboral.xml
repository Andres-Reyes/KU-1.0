<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_infolaboral">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/oferta3"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:text="Ofertas Laborales"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/material_on_primary_disabled">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idNom1"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:text="Mecanico de Motos"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="130dp"
                            android:layout_height="76dp"
                            android:src="@drawable/img"
                            app:srcCompat="@drawable/img" />

                        <LinearLayout
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif"
                                android:lineSpacingExtra="8sp"
                                android:text="Tiempo y experiencia"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:typeface="normal" />

                            <LinearLayout
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView14"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="8sp"
                                    android:text="Tiempo Completo"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:typeface="normal" />

                                <TextView
                                    android:id="@+id/textView15"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="8sp"
                                    android:text="min: 6 meses"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:typeface="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="30dp"
                                    android:src="@drawable/folder"
                                    app:srcCompat="@drawable/folder" />

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/gear"
                                    app:srcCompat="@drawable/gear" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descripción:"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Importante concesionario de motos se encuentra en búsqueda de los mejores técnicos, las condiciones del cargo son las siguientes: Experiencia en mantenimiento de motocicletas, mantenimiento preventivo y correctivo. Conocimiento en mantenimiento eléctrico (Instalaciones de exploradoras, luces led, estacionarias, conversiones de corriente directa); Conocimiento en inyección, ABS y diagnóstico y conocimiento en diagnóstico por scanner, despiece de motores, lectura de manuales de marca, implementar estándares de calidad entregados por la marca, orden y aseo, metódico, excelente presentación personal ciudad de trabajo Aguazul, Tecnico Certificado o Carreras a fines, aplicar o enviar Hoja de Vida.
Condiciones laborales:
Salario: A convenir + prestaciones sociales + auxilio de transporte + comisiones.
Horario: Lunes a sábado jornada de 8 horas" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Favoritos"
                            tools:ignore="TouchTargetSizeCheck" />
                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:checkable="false"
                            android:text="Volver"
                            tools:ignore="TouchTargetSizeCheck" />
                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:checkable="false"
                            android:text="Aplicar"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/barchart" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>